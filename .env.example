# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-change-in-production

# Application Settings
APP_HOST=0.0.0.0
APP_PORT=5000
DEMO_MODE=False

# Database Configuration
DATABASE_URL=sqlite:///deployments.db
SQLALCHEMY_TRACK_MODIFICATIONS=False

# Proxmox Configuration
PROXMOX_URL=https://192.168.1.100:8006/api2/json
PROXMOX_USER=root@pam
PROXMOX_PASSWORD=your-proxmox-password
PROXMOX_NODE=pve
PROXMOX_STORAGE=local-lvm
PROXMOX_NETWORK_BRIDGE=vmbr0

# Terraform Settings
TERRAFORM_DIR=./terraform
TERRAFORM_STATE_DIR=./terraform/states

# VM/LXC Default Settings
DEFAULT_VM_MEMORY=2048
DEFAULT_VM_CORES=2
DEFAULT_VM_DISK=20
DEFAULT_LXC_MEMORY=1024
DEFAULT_LXC_CORES=1
DEFAULT_LXC_DISK=10

# GitHub Configuration
GITHUB_TOKEN=your-github-token

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/paas.log

# Network Configuration
SUBNET=192.168.100.0/24
GATEWAY=192.168.100.1
DNS_SERVERS=8.8.8.8,8.8.4.4

# SSH Configuration
SSH_USER=root
SSH_PASSWORD=your-ssh-password
SSH_PUBLIC_KEY=

# Max Deployments
MAX_DEPLOYMENTS=10

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
